{
    "name": "Neo4j API",
    "apiVersion": "2014-03-13",
    "description": "REST API of the Neo4j.",
    "documentation": "http://docs.neo4j.org/chunked/1.9.7/index.html",
    "baseUrl": "db/data",
    "operations": {
        "baseOperation": {
            "parameters": {
                "inputFormat": {
                    "description": "The provided input format.",
                    "location": "header",
                    "type": "string",
                    "sentAs": "Content-Type",
                    "default": "application/json"
                },
                "outputFormat": {
                    "description": "The expected output format.",
                    "location": "header",
                    "type": "string",
                    "sentAs": "Accept",
                    "default": "application/json; charset=UTF-8"
                }
            }
        },
        "createUniqueNode": {
            "summary": "Creates a unique node or returns it if it does not exist.",
            "extends": "baseOperation",
            "uri": "index/node/{index}?uniqueness=get_or_create",
            "httpMethod": "POST",
            "parameters": {
                "index": {
                    "description": "Name of the unique index that is used.",
                    "type": "string",
                    "location": "uri",
                    "default": "unique-node",
                    "required": false
                },
                "key": {
                    "description": "Arbitrary key for the unique value.",
                    "type": "string",
                    "location": "json",
                    "default": "unique-value",
                    "required": false
                },
                "identifier": {
                    "description": "The unique value.",
                    "type": "string",
                    "location": "json",
                    "sentAs": "value",
                    "required": true
                },
                "properties": {
                    "description": "The properties of the node.",
                    "type": "object",
                    "location": "json",
                    "required": true
                }
            }
        },
        "batch": {
            "extends": "baseOperation",
            "uri": "batch",
            "httpMethod": "POST"
        }
    }
}